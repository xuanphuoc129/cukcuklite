<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f25751" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- focus -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#f25751" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- default -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <stroke android:color="@color/colorLightGray" android:width="1dp" />
            <gradient android:startColor="@color/colorWhite" android:endColor="@color/colorWhite"/>
            <padding android:bottom="@dimen/margin_padding_haft" android:right="@dimen/margin_padding_haft" android:top="@dimen/margin_padding_haft" android:left="@dimen/margin_padding_haft" />
        </shape>
    </item>

</selector>